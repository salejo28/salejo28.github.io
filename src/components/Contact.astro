<section id="contact" class="py-24 px-6 lg:px-12 max-w-7xl mx-auto">
  <div class="grid lg:grid-cols-2 gap-16 items-start">
    <!-- Contact Info -->
    <div class="reveal opacity-0 translate-y-8 transition-all duration-700">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        ¬øTienes un proyecto en mente?
      </h2>
      <p class="text-zinc-400 text-lg mb-8">
        Estoy disponible para nuevos proyectos, colaboraciones o simplemente para hablar sobre tecnolog√≠a. ¬°No dudes en contactarme!
      </p>

      <div class="flex flex-col gap-4">
        {contactLinks.map((link) => (
          <a 
            href={link.href} 
            class="contact-link"
            target={link.external ? '_blank' : undefined}
            rel={link.external ? 'noopener noreferrer' : undefined}
          >
            <div class="w-12 h-12 bg-gradient-accent rounded-xl flex items-center justify-center text-xl shrink-0">
              {link.icon}
            </div>
            <div>
              <strong class="block">{link.title}</strong>
              <span class="text-zinc-400 text-sm">{link.value}</span>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Contact Form -->
    <div class="reveal opacity-0 translate-y-8 transition-all duration-700 animation-delay-300">
      <div class="bg-primary-card border border-border rounded-2xl p-8">
        <form id="contactForm">
          <div class="mb-6">
            <label for="name" class="block text-zinc-400 text-sm mb-2">Nombre</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="Tu nombre" 
              required 
              class="form-input"
            />
          </div>

          <div class="mb-6">
            <label for="email" class="block text-zinc-400 text-sm mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="tu@email.com" 
              required 
              class="form-input"
            />
          </div>

          <div class="mb-6">
            <label for="message" class="block text-zinc-400 text-sm mb-2">Mensaje</label>
            <textarea 
              id="message" 
              name="message" 
              placeholder="Cu√©ntame sobre tu proyecto..." 
              required 
              rows="4"
              class="form-input resize-y min-h-30"
            ></textarea>
          </div>

          <button 
            type="submit" 
            class="w-full bg-gradient-accent text-primary py-4 rounded-xl font-semibold transition-all duration-300 hover:-translate-y-0.5 hover:shadow-[0_10px_30px_rgba(0,212,170,0.3)]"
          >
            Enviar mensaje ‚Üí
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('contactForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const name = (form.elements.namedItem('name') as HTMLInputElement).value;
    const email = (form.elements.namedItem('email') as HTMLInputElement).value;
    const message = (form.elements.namedItem('message') as HTMLTextAreaElement).value;
    
    const mailtoLink = `mailto:santiago.aruiz28@gmail.com?subject=Contacto desde CV - ${name}&body=${encodeURIComponent(message)}%0A%0AContacto: ${email}`;
    window.location.href = mailtoLink;
  });
</script>