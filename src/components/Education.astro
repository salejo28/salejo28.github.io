const getStatusClasses = (status: string) => {
  switch (status) {
    case 'Completado':
      return 'bg-green-500/10 text-green-400 border-green-500/20';
    case 'En curso':
      return 'bg-accent-cyan/10 text-accent-cyan border-accent-cyan/20';
    case 'En pausa':
      return 'bg-accent-amber/10 text-accent-amber border-accent-amber/20';
    default:
      return 'bg-zinc-500/10 text-zinc-400 border-zinc-500/20';
  }
};

const getAccentColor = (color: string) => {
  switch (color) {
    case 'cyan':
      return 'from-accent-cyan to-accent-cyan/50';
    case 'purple':
      return 'from-accent-purple to-accent-purple/50';
    case 'amber':
      return 'from-accent-amber to-accent-amber/50';
    default:
      return 'from-accent-cyan to-accent-purple';
  }
};
