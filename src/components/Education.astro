        style={`transition-delay: ${i * 100}ms`}
      >
        {/* Top gradient line */}
        <div class={`absolute top-0 left-0 right-0 h-1 rounded-t-2xl bg-gradient-to-r ${getAccentColor(edu.color)} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
        
