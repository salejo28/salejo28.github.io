---
const stats = [
  { number: '6+', label: 'Años Exp.' },
  { number: '20+', label: 'Proyectos' },
  { number: '5', label: 'Empresas' },
];

const codeLines = [
  { num: 1, content: '<span class="text-purple-400">const</span> developer = <span class="text-zinc-500">{</span>' },
  { num: 2, content: '  <span class="text-blue-400">name</span>: <span class="text-green-400">"Santiago Ruiz"</span>,' },
  { num: 3, content: '  <span class="text-blue-400">role</span>: <span class="text-green-400">"Full Stack Developer"</span>,' },
  { num: 4, content: '  <span class="text-blue-400">location</span>: <span class="text-green-400">"Bogotá, Colombia"</span>,' },
  { num: 5, content: '  <span class="text-blue-400">skills</span>: [<span class="text-green-400">"React"</span>, <span class="text-green-400">"Node"</span>, <span class="text-green-400">"AWS"</span>],' },
  { num: 6, content: '  <span class="text-blue-400">passion</span>: <span class="text-green-400">"Building great products"</span>,' },
  { num: 7, content: '  <span class="text-blue-400">available</span>: <span class="text-yellow-400">true</span>', cursor: true },
  { num: 8, content: '<span class="text-zinc-500">}</span>;' },
];
---

<section id="about" class="min-h-screen flex items-center px-6 lg:px-12 pt-32 pb-16 max-w-7xl mx-auto relative">
  <div class="grid lg:grid-cols-2 gap-16 items-center w-full">
    <!-- Text Content -->
    <div class="animate-fade-in-up">
      <div class="inline-flex items-center gap-2 bg-accent-cyan/10 border border-accent-cyan/30 px-4 py-2 rounded-full text-sm text-accent-cyan mb-6 animate-pulse-glow">
        <span class="w-2 h-2 bg-accent-cyan rounded-full animate-blink"></span>
        Disponible para nuevos proyectos
      </div>

      <h1 class="text-4xl lg:text-6xl xl:text-7xl font-extrabold leading-tight mb-6">
        Hola, soy <span class="text-gradient">Santiago Ruiz</span>
      </h1>

      <p class="text-lg lg:text-xl text-zinc-400 mb-8 max-w-lg">
        Desarrollador Full Stack con +6 años creando soluciones digitales escalables. 
        Especializado en arquitecturas modernas y experiencias de usuario excepcionales.
      </p>

      <div class="flex gap-12 mt-12 pt-8 border-t border-border">
        {stats.map((stat) => (
          <div class="text-left">
            <div class="text-3xl lg:text-4xl font-bold text-gradient">{stat.number}</div>
            <div class="text-sm text-zinc-500 uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Code Window -->
    <div class="opacity-0 animate-fade-in-up flex justify-center" style="animation-delay: 300ms;">
      <div class="bg-primary-card border border-border rounded-2xl overflow-hidden w-full max-w-lg shadow-glow">
        <!-- Window Header -->
        <div class="flex items-center gap-2 px-4 py-3 bg-primary-light border-b border-border">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span class="ml-auto font-mono text-xs text-zinc-500">santiago.config.ts</span>
        </div>
        
        <!-- Code Body -->
        <div class="p-6 font-mono text-sm leading-loose">
          {codeLines.map((line, i) => (
            <div class="flex gap-4 opacity-0 animate-fade-in-up" style={`animation-delay: ${i * 150}ms`}>
              <span class="text-zinc-600 select-none min-w-5">{line.num}</span>
              <span class="text-zinc-400" set:html={line.content}>
                {line.cursor && <span class="typing-cursor"></span>}
              </span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-zinc-500 text-sm animate-bounce-slow">
    <span>Scroll</span>
    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</section>